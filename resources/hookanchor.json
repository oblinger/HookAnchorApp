{
  "rules": [
    {
      "description": "Caps Lock: HookAnchor and Hyper modifier when combined (recommended)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ],
          "to_if_alone": [
            {
              "shell_command": "open -a /Applications/HookAnchor.app"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Caps Lock: HookAnchor on key down (immediate)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "shell_command": "open -a /Applications/HookAnchor.app"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Alt Key: HookAnchor when alone (Left Alt)",
      "manipulators": [
        {
          "from": {
            "key_code": "left_alt"
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "to_if_alone": [
            {
              "shell_command": "open -a /Applications/HookAnchor.app"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Alt Key: HookAnchor when alone (Right Alt)",
      "manipulators": [
        {
          "from": {
            "key_code": "right_alt"
          },
          "to": [
            {
              "key_code": "right_alt"
            }
          ],
          "to_if_alone": [
            {
              "shell_command": "open -a /Applications/HookAnchor.app"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "F12+Cmd+Option: HookAnchor fallback",
      "manipulators": [
        {
          "from": {
            "key_code": "f12",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a /Applications/HookAnchor.app"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "HookAnchor"
}